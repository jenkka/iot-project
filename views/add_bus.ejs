<%- include("partials/header"); -%>

<div class="bus-form">
    <h3>Añadir nueva unidad</h3>
    <form class="form" action="/add_bus" method="post">
        <input type="text" name="route" class="form-control" placeholder="Ruta" required autofocus>
        <input type="text" name="id" class="form-control" placeholder="ID" required>
        <input type="number" name="seats" class="form-control" placeholder="Número de asientos" required>
        <input type="number" name="passengerLimit" class="form-control" placeholder="Carga máxima de pasajeros" required>
        <input type="text" name="channelId" class="form-control" placeholder="Channel ID de la plataforma IoT" required>
        <input type="text" name="apiKey" class="form-control" placeholder="API Key de la plataforma Iot (si el canal es privado)">
        <button class="btn btn-lg btn-primary btn-block btn-signin" type="submit">Añadir</button>
    </form>
</div>

<%- include("partials/footer"); -%>